<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.createameal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AccountActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.createameal.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.UserActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.createameal.ui.AccountActivity" />
        </activity>
        <activity
            android:name=".ui.LogInActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.createameal.ui.LogInActivity" />
        </activity>
        <activity android:name=".ui.AddARecipeActivity" />
        <activity android:name=".ui.RecipeResultsActivity" />
        <activity android:name=".ui.FavoritesActivity" />
        <activity android:name=".ui.GroceryListActivity" />
        <activity android:name=".ui.RecipeDetailActivity"></activity>
    </application>

</manifest>