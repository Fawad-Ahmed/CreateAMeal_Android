<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.createameal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.createameal.MainActivity" />
        </activity>
        <activity
            android:name=".UserActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.createameal.AccountActivity" />
        </activity>
        <activity
            android:name=".LogInActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.createameal.LogInActivity" />
        </activity>
        <activity android:name=".AddARecipeActivity" />
        <activity android:name=".RecipeResultsActivity" />
        <activity android:name=".FavoritesActivity" />
        <activity android:name=".GroceryListActivity"></activity>
    </application>

</manifest>